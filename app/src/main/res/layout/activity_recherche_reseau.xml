<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/grad"
    tools:context="com.example.samir.accueil.Activity.RechercheReseau">


    <TextView
        android:id="@+id/TitreRecherche"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="62dp"
        android:layout_marginLeft="50dp"
        android:text="Entrez le nom du réseau souhaité"
        android:textSize="21dp" />

    <EditText
        android:id="@+id/NomRecherche"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="190dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:hint="Nom" />

    <Spinner
        android:id="@+id/MotCleRecherche"
        android:layout_width="211dp"
        android:layout_height="30dp"
        android:layout_alignStart="@+id/NomRecherche"
        android:layout_below="@+id/NomRecherche"
        android:layout_marginTop="15dp"/>

    <Button
        android:id="@+id/Rechercher"
        android:layout_width="260dp"
        android:layout_height="40dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="156dp"
        android:background="@color/agebg"
        android:text="Rechercher"
        android:textSize="16sp" />


</RelativeLayout>

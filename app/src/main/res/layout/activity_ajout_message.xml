<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/grad"
    tools:context=".Activity.AjoutMessage">


    <RelativeLayout
        android:id="@+id/RelativeLayout1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        android:paddingBottom="20dp"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="123dp">

        <TextView
            android:id="@+id/TitreAjout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Ajouter un message :"
            android:textColor="@color/white"
            android:layout_marginLeft="10dp"
            android:textSize="35dp" />

        <RelativeLayout
            android:id="@+id/ContenuMessage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/TitreAjout"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/rectangle">

            <EditText
                android:id="@+id/Message"
                android:layout_width="306dp"
                android:layout_height="120dp"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:adjustViewBounds="true"
                android:background="@color/white"
                android:hint="Ecrivez votre message..."
                android:inputType="textPersonName"
                android:scaleType="centerInside"
                android:textSize="16dp"
                tools:layout_editor_absoluteX="39dp"
                tools:layout_editor_absoluteY="146dp" />

        </RelativeLayout>

        <Button
            android:id="@+id/BoutonEnvoyerMessage"
            android:layout_width="196dp"
            android:layout_height="37dp"
            android:layout_alignRight="@id/ContenuMessage"
            android:layout_below="@+id/ContenuMessage"
            android:background="@drawable/envoyermessage"
            android:text="Envoyer"
            android:textColor="@color/white"
            android:textSize="17sp" />

    </RelativeLayout>

</RelativeLayout>